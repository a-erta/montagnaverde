<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <% @categories.each_with_index do |f, i| %>
        <% if i == 0 %>
            <li class="active"><a href="#tab<%= i %>" data-toggle="tab"><%= f.name %></a></li>
        <% else %>
            <li><a href="#tab<%= i %>" data-toggle="tab"><%= f.name %></a></li>
        <% end %>
    <% end %>
  </ul>
  <div class="tab-content">
    <% @categories.each_with_index do |f, i| %>
        <% if i == 0 %>
            <div class="tab-pane active" id="tab<%= i %>">
        <% else %>
            <div class="tab-pane" id="tab<%= i %>">
        <% end %>
        <%
           products = Product.all;
           products.each do |product|

           if product.category_id == f.name

        %>
            <div class="span3" >
              <%= image_tag(product.image_url, :class => 'img-rounded') %>
              <h4> <%= product.title %> </h4>
              <dl>
                <dd>
                  <%= sanitize(product.description) %>
                <dd>
                <dd>
                  <%= number_to_currency(product.price, :unit => "â‚¬") %>
                  <%= t(:availabiity) %>: <%= product.quantity %>
                </dd>
              </dl>
              <% if product.quantity && product.quantity != 0 %>
                  <%= button_to t(:add_html), line_items_path(:product_id => product), :remote => true, :class => 'btn btn-mini' %>
              <% else %>
                  <%= t(:product_not_available) %>
              <% end %>

              <p><a class="btn" href="#">View details &raquo;</a></p>
            </div>
                <% end %>
        <% end %>


            </div>
    <% end %>
  </div>
</div>
</div>