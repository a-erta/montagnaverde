<%= simple_form_for(@price, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :product_id, :collection => Product.all.map { |c| [c.title, c.id] } %>
    <%= f.input :price %>
    <%= f.input :quantity %>
    <%= f.input :measure %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
