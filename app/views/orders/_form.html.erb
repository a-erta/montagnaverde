<%= simple_form_for(@order, :html => {:class => 'form-horizontal' }) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%=raw t('errors.template.header', :count => @order.errors.count,
                 :model => t('activerecord.models.order')) %>.</h2>

      <p><%= t('errors.template.body') %></p>
      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.input :name, :label => t(:name) %>
    <%= f.input :address, :label => t(:address) %>
    <%= f.input :email, :label => t(:email) %>
    <%= f.input :pay_type, :collection => Order::PAYMENT_TYPES,
                :prompt => t(:pay_prompt_html) %>
    <%= f.button :submit, :label => t(:submit) %>
<% end %>